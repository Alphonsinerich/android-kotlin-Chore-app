<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSplash"
        tools:context=".activity.SplashActivity">

    <TextView
            android:text="Version | 1.0.0"
            android:layout_width="176dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:id="@+id/applVersion2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-condensed-light"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="122dp"
            android:layout_marginRight="122dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="114dp" android:layout_marginStart="114dp"/>
    <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp" app:srcCompat="@drawable/ic_chore"
            android:id="@+id/logoImage"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="250dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="250dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="132dp"
            android:layout_marginStart="132dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="132dp"
            android:layout_marginRight="132dp"/>
</android.support.constraint.ConstraintLayout>