<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <ListView
            android:layout_width="331dp"
            android:layout_height="501dp"
            android:id="@+id/listViewId"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toTopOf="@+id/addChoreId"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/addChoreId" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:text="@string/add_chore"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>