<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ChoreActivity">

    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp" android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/imageViewEdit"
            android:id="@+id/textInputLayout4">
        <EditText
                android:id="@+id/enterChoreEditId"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/enter_a_chore"
                android:inputType="textPersonName"
                android:padding="8dp"
                tools:layout_editor_absoluteY="191dp" tools:layout_editor_absoluteX="55dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp" android:layout_marginRight="56dp" android:id="@+id/textInputLayout5">
        <EditText
                android:id="@+id/assignedToEditId"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/assigned_to"
                android:inputType="textPersonName"
                android:padding="8dp"
                tools:layout_editor_absoluteY="255dp" tools:layout_editor_absoluteX="55dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout5" android:layout_marginTop="24dp"
            android:id="@+id/textInputLayout6">
        <EditText
                android:id="@+id/assignedByEditId"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/assigned_by"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteY="319dp" tools:layout_editor_absoluteX="55dp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/saveChoreEdit"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edge_button"
            android:text="@string/save"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout6"/>
    <TextView
            android:text="1.0.0"
            android:layout_width="47dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:id="@+id/version"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:textSize="15dp"
            android:layout_marginBottom="11dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/darker_gray"/>
    <TextView
            android:text="Application version"
            android:layout_width="146dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:id="@+id/applVersion" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="11dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="15dp"
            android:textColor="@android:color/darker_gray"/>
    <ImageView
            android:layout_width="137dp"
            android:layout_height="131dp" app:srcCompat="@drawable/ic_chore"
            android:id="@+id/imageViewEdit" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="137dp" android:layout_marginStart="137dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="137dp"
            android:layout_marginRight="137dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_del"
            android:id="@+id/deleteChoreEdit" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="79dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_return"
            android:id="@+id/goBackEdit" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="82dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>